<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myroutines.FormRoutine"
    android:padding="16dp">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_name_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/EditText.Login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Routine Name"
            android:inputType="text"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_description_r"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/EditText.Login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Routine Description"
            android:inputType="text"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/btn_ok_r"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="addNewRoutine"
        android:background="@drawable/custom_button"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btn_cancel_r"
        android:layout_alignParentBottom="true"
        android:onClick="returnMyRoutines"
        android:background="@drawable/custom_button"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/txt_background_routine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_description_r"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Background: "
        android:textSize="20sp"
        android:padding="10dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txt_background_routine"
        android:id="@+id/linearForm"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/blog_5"
        android:id="@+id/img_selected"
        android:layout_gravity="center_horizontal|top"
        />
    </FrameLayout>
    <ImageView
        android:id="@+id/btn_select_image"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_below="@+id/input_description_r"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/btn_take_photo"
        android:onClick="selectImage"
        android:text="Select an image"
        app:srcCompat="@drawable/ic_insert_photo" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/ic_camera"
        android:layout_below="@id/input_description_r"
        android:layout_alignParentRight="true"
        android:id="@+id/btn_take_photo"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:onClick="startCamera"/>

</RelativeLayout>