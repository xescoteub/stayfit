<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="The time between exercises to rest is"
        android:id="@+id/TextViewActualTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="60 seconds"
        android:id="@+id/ActualTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="Change to:"
        android:id="@+id/edit_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:inputType="number"
        android:textSize="18dp"
        android:textAlignment="center"
        android:id="@+id/editTextTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the time (seconds) here"/>

</LinearLayout>