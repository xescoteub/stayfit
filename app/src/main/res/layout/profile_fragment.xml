<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorBlueMidnight"
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="Profile Settings"/>

    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/ic_settings_black_24dp"
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="settingsBtn_onClick"/>

    <ImageView
        android:id="@+id/IconUser"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/profile_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/ic_person" />

    <TextView
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:textColor="@color/colorBlueMidnight"
        android:text="Change Photo"
        android:layout_centerHorizontal="true"
        android:id="@+id/change_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IconUser"/>

    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/change_photo"
        android:id="@+id/UserNamelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"/>

    <EditText
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:textSize="13dp"
        android:text=" Change your UserName"
        android:layout_below="@+id/change_photo"
        android:id="@+id/UserNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/UserNamelabel"
        android:id="@+id/Biolabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio"/>

    <EditText
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:text=" Change your Bio"
        android:layout_below="@+id/UserNameEditText"
        android:id="@+id/BioEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="15dp"
        android:textStyle="italic"
        android:textColor="@color/colorBlueMidnight"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Biolabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change_passwd"
        android:text="@string/change_password"/>

    <ImageView
        android:onClick="logOut_onClick"
        android:id="@+id/icon_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="90dp"
        app:srcCompat="@drawable/ic_subdirectory_arrow_right_black_24dp" />

    <TextView
        android:onClick="logOut_onClick"
        android:textStyle="bold"
        android:id="@+id/logout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="90dp"
        android:text="Log out"
        android:textSize="20dp" />


</RelativeLayout>
